html, body {
  height: 100%;
}

body {
  font-family: Lato !important;
  margin: 0;
}

.main-container {
  position: relative;
  height: 100%;
  overflow: hidden;
}

.main-toptier-logo {
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1;

  img {
    height: 50%;
    width: auto;
    margin: auto;
  }
}

.main-wrapper {
  display: flex;
  background-color: #eaeaea;
  height: 100%;
  padding-left: 23em;
  padding-right: 1em;
  margin: 0 auto;
}

.canvas-draw {
  display: inherit;
  margin: 0 auto;
  background: #000;
}

.labyrinth-container {
  position: relative;
  margin-top: 15px;
}

.subtitle {
  font-size: 1.5em;
}

.chip-container {
  position: absolute;
  width: 624px;
  height: 624px;
  top: 0;
  bottom: 0;
  left: 50%;
  margin-left: -312px;
}

.chip {
  position: absolute;
  display: inline-block;
  width: 56px;
  height: 59px;
  background-image: url("<%= asset_path('ficha.png') %>");
  bottom: -70px;
  left: 10;
  transition: all 1s ease;
}

.movements-container {
  background-color: white;
  display: inline-block;
  padding: 0 1px;
  width: 350px;
  margin-left: 10px;
}

.card {
  background-color: white;
  padding: 25px 15px;
  width: 100%;
  top: 0;
  left: 0;
  -o-box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
  -webkit-box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
  -moz-box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
  box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
}

.clock{
  font-family: sans-serif;
  color: #fff;
  display: inline-block;
  font-weight: 100;
  text-align: center;
  font-size: 30px;
  padding: 10px;
  border-radius: 3px;
  background: #00BF96;
  position: absolute;
  margin-left: -100px;

  .clock-seconds-title{
    padding: 15px;
    border-radius: 3px;
    background: #00816A;
    display: inline-block;
  }

  .clock-text{
    padding-top: 5px;
    font-size: 16px;
  }
}

.hidden {
  visibility: hidden;
  opacity: 0;
  transition: visibility 0s 2s, opacity 2s linear;
}

.clearfix {
  clear: both;
}
