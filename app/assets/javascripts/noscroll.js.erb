bounceUp = function(cont, bounce){
  if (cont % 2 == 1)
  {
    this.chip.style.bottom = parseInt(this.chip.style.bottom) - BOUNCE_MOVE + 'px';
  }
  else
  {
    this.chip.style.bottom = parseInt(this.chip.style.bottom) + BOUNCE_MOVE + 'px';
  }
  cont++;
  if (cont == 4)
  {
    bounce = false;
    cont = 0;
  }
    this.chip.style.transitionDuration = "1s";
    return [cont, bounce];
}

